<% if user_signed_in? %>
  <h1>Friend List</h1>
  <table class="table" id="friends">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th></th>
      </tr>
    </thead>
      <tr>
        <tbody>
          <% @friends.each do |friend| %>
            <% if current_user == friend.user %>
              <tr>
                <td>
                  <%= link_to  friend.first_name + " "+ friend.last_name,friend %>
                </td>
                <td><%= friend.email %></td>
                <td><%= friend.phone %></td>
                <td><%= friend.twitter %></td>
                <td><%= friend.user_id %></td>
                <td><%= link_to 'Delete', friend, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } , class: "btn btn-sm btn- btn-outline-danger"%></td>
              </tr>
            <%end%>  
          <%end%>
        </tbody>
    </tr>
  </table>
  <div id="friends">
  </div>
  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<%else%>
  <h1>Hello world</h1>
<h2>My first webpage</h2>
<%end%>
